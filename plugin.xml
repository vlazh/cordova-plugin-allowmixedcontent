<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
xmlns:android="http://schemas.android.com/apk/res/android"
           id="cordova-plugin-allowmixedcontent"
      version="0.0.0">
    <name>AllowMixedContent</name>

    <platform name="android">
        <config-file target="config.xml" parent="/*">
            <feature name="AllowMixedContent">
                <param name="android-package" value="org.apache.cordova.webview.AllowMixedContent" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <source-file src="src/android/AllowMixedContent.java" target-dir="src/org/apache/cordova/webview" />
    </platform>

</plugin>
